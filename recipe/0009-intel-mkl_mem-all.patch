+       size -= MKL_INT_MAX;
+       dest += MKL_INT_MAX;
+   }
+   if (size > 0) {
+       if (size >= __THRESHOLD) {
+            cblas_dcopy(size, src , __NULL_STRIDE, dest, __UNIT_STRIDE);
+       } else {
+            memset(dest, 0, size * sizeof(double));
+       }
+   }
